    <!--通过主键修改数据-->
    <update id="update">
        update discuss_post
        <trim prefix="set" prefixOverrides="and" suffixOverrides=",">
            <include refid="updateValue"></include>
        </trim>
        <where>
            id = #{id}
        </where>
    </update>

    <select id="selectDiscussPosts" resultType="site.pyyf.community.entity.DiscussPost">
        select
        <include refid="allColumn"></include>
        from discuss_post
        where status != 2
        <if test="userId!=-1">
            and user_id = #{userId}
        </if>
        <if test="tag!='-1'">
            and tags regexp #{tag}
        </if>
        <if test="orderMode==0">
            order by type desc, create_time desc
        </if>
        <if test="orderMode==1">
            order by type desc, score desc, create_time desc
        </if>

        limit #{offset}, #{limit}
    </select>

    <select id="querySameCount" resultType="java.lang.Integer">
    select count(*) from discuss_post
    where
    user_id = #{userId} and
    title = #{title} and
    timestampdiff(second ,#{createTime},create_time) &lt; 100;
    </select>


    <select id="queryAllByLimitByPersonalized" resultType="site.pyyf.community.entity.DiscussPost">
        select
        <include refid="allColumn"></include>
        from discuss_post
        where status !=2
        order by
        <if test="publishedIds.size()!=0">
             (id in(
            <foreach collection="publishedIds" item="item" index="index" separator=",">
                #{item}
            </foreach>
            )) desc ,
        </if>
        <if test="likedIds.size()!=0">
            (id in (
            <foreach collection="likedIds" item="item" index="index" separator=",">
                #{item}
            </foreach>
            ) ) desc ,
        </if>

        <if test="commentIds.size()!=0">
            (id in (
            <foreach collection="commentIds" item="item" index="index" separator=",">
                #{item}
            </foreach>
            ) ) desc ,
        </if>
        <if test="tags.size()!=0">
            ((
            <foreach collection="tags" item="item" index="index" separator="or">
                tags regexp #{item}
            </foreach>
            ) &amp;&amp; timestampdiff(day ,create_time,now())&lt; #{deadline} )desc ,
        </if>
        score desc
        limit #{offset}, #{limit}
    </select>


</mapper>